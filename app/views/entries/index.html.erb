<html>
  <head>
    <title>Railscaster</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <head>

    <style> 
    .imgcontainer {
    position: relative;
    text-align: center;
    color: white;
  }

  .bottom-left{
    color:white;
    padding:10px;
    position: absolute;
    bottom: 0px;
    left: 0px;
  }
    </style>
    <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
      <a class="navbar-brand" href="/">Rails Caster</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home
              <span class="sr-only">(current)</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">About</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Services</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Contact</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <section style="background:black">
  <div class="container">

    <div class="row align-items-center">
      <div class="col-lg-6 mt-5">
      <div class="imgcontainer">
        <img class="img-fluid rounded mb-4 mb-lg-0" src="https://images.pexels.com/photos/3502498/pexels-photo-3502498.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260" alt="">
        <div class="bottom-left bg-dark">
        Hello Rails this is a text embedded on an image generally speaking
        </div>
        </div>
      </div>
     

      <div class="col-lg-6 mt-5">
      <img class="img-fluid rounded mb-4 mb-lg-0" src="https://images.pexels.com/photos/949670/pexels-photo-949670.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260" alt="">
      
      </div>
    </div>


    <div class="row mt-5">

    <% if @entry.blank? %> 
    <div class="alert alert-success col-md-12"> No Entries currently <a href="/entries/new"> Add new entry </a> </div>
    <% else %>
    <% @entry.each do |e| %> 
      <div class="col-md-4 mb-5">
        <div class="card h-100 bg-dark text-white">
          <div class="card-body">
            <h2 class="card-title"> <%= e.title %> </h2>
            <p class="card-text text-justify"> <%= truncate(e.description, :length => 150) %> </p>
          </div>
          <div class="card-footer">
            <a href="/entries/<%= e.id %>" class="btn btn-success btn-sm">Read More</a>
          </div>
        </div>
      </div>
      <% end %>

      <% end %>
    </div>
  </div>
 
</section>
  <footer class="py-5 bg-dark">
    <div class="container">
      <p class="m-0 text-center text-white">Copyright &copy; Your Website 2020</p>
    </div>
   
  </footer>
    </body>
    </html>